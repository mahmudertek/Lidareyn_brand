# Environment Configuration
NODE_ENV=production

# Server
PORT=5000

# MongoDB Atlas Connection
# Format: mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/galatacarsı

# JWT Configuration
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-min-32-characters
JWT_EXPIRE=30d

# Frontend URL (for CORS)
FRONTEND_URL=https://yourdomain.com

# Email Configuration (NodeMailer - Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@galatacarsı.com

# iyzico Payment Gateway Configuration
# Get your keys from: https://merchant.iyzipay.com
# Sandbox (Test): https://sandbox-merchant.iyzipay.com
IYZICO_API_KEY=sandbox-your-api-key
IYZICO_SECRET_KEY=sandbox-your-secret-key
IYZICO_BASE_URL=https://sandbox-api.iyzipay.com
# For production, use:
# IYZICO_BASE_URL=https://api.iyzipay.com

# Sipay Payment Gateway Configuration (RECOMMENDED - Lower fees)
# Get your keys from: https://merchant.sipay.com.tr
# Sandbox: https://sandbox-merchant.sipay.com.tr
SIPAY_MERCHANT_KEY=your-merchant-key
SIPAY_APP_SECRET=your-app-secret
SIPAY_MERCHANT_ID=your-merchant-id
SIPAY_BASE_URL=https://sandbox-api.sipay.com.tr
# For production, use:
# SIPAY_BASE_URL=https://api.sipay.com.tr

# Active Payment Provider (sipay, iyzico, or demo)
PAYMENT_PROVIDER=demo

# ============================================
# CARGO INTEGRATION
# ============================================

# Cargo Mode (demo or live)
CARGO_MODE=demo

# Default Cargo Provider (yurtici, mng, aras, ptt, surat)
DEFAULT_CARGO_PROVIDER=yurtici

# Company Address (for sender info)
COMPANY_ADDRESS=Beyoğlu, İstanbul
COMPANY_PHONE=0212 XXX XX XX
COMPANY_CITY=İstanbul
COMPANY_DISTRICT=Beyoğlu

# Yurtiçi Kargo API
# Contact: https://www.yurticikargo.com/tr/kurumsal-cozumler
YURTICI_API_URL=https://ws.yurticikargo.com/KOPSWebServices
YURTICI_USERNAME=your-username
YURTICI_PASSWORD=your-password
YURTICI_CUSTOMER_CODE=your-customer-code

# MNG Kargo API
# Contact: https://www.mngkargo.com.tr/kurumsal
MNG_API_URL=https://service.mngkargo.com.tr/maboraweb
MNG_USERNAME=your-username
MNG_PASSWORD=your-password
MNG_CUSTOMER_CODE=your-customer-code

# Aras Kargo API
# Contact: https://www.araskargo.com.tr/kurumsal
ARAS_API_URL=https://customerservices.araskargo.com.tr
ARAS_USERNAME=your-username
ARAS_PASSWORD=your-password
ARAS_CUSTOMER_CODE=your-customer-code

# PTT Kargo API
PTT_API_URL=https://gonderitakip.ptt.gov.tr
PTT_USERNAME=your-username
PTT_PASSWORD=your-password

# Sürat Kargo API
SURAT_API_URL=https://kargo.suratkargo.com.tr
SURAT_USERNAME=your-username
SURAT_PASSWORD=your-password
